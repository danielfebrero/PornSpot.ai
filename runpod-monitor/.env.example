# ComfyUI Monitor Configuration
# Copy this file to .env and update with your actual values

# ComfyUI Configuration
COMFYUI_HOST=localhost
COMFYUI_PORT=8188

REMOTE_WS_URL=ws://localhost:8188/ws

# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET=pornspot-media-bucket
S3_PREFIX=generated
# CLOUDFRONT_DOMAIN=cdn.pornspot.ai
# S3_PUBLIC_BASE_URL=https://cdn.pornspot.ai
# S3_ENDPOINT_URL=http://localhost:4566 # Optional for LocalStack or testing

# Upload Behaviour
# UPLOAD_CONCURRENCY=4
# DOWNLOAD_TIMEOUT_MS=7000
# DOWNLOAD_RETRIES=2
# DOWNLOAD_RETRY_DELAY_MS=750

# AWS Credentials
# Option 1: Use IAM role (recommended for RunPod)
# No credentials needed if using IAM role

# Option 2: Use access keys (for local testing)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Logging Configuration
LOG_LEVEL=INFO

# Monitor Configuration
RECONNECT_DELAY=5
MAX_RECONNECT_ATTEMPTS=10
PING_INTERVAL=30
PING_TIMEOUT=10